    <TextView
        android:id="@+id/hi_let_s_se"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="114dp"

        android:layout_marginRight="114dp"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="@string/great"
        android:textColor="#31333B"
        android:textSize="27sp"
        android:translationY="-2.23sp" />

    <TextView
        android:id="@+id/create_your"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hi_let_s_se"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="11sp"
        android:text="@string/secure"
        android:textAppearance="@style/create_your"
        android:textColor="#31333B" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/PasswordLayout"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_below="@+id/create_your"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:background="#F7F8FC"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:background="#F7F8FC"
            android:fontFamily="sans-serif"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:textColorHint="#7C7B8A" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/error"
        android:layout_width="327dp"
        android:layout_height="25dp"
        android:layout_below="@+id/PasswordLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:textColor="#D44333"
        android:textSize="18sp" />

    <View
        android:id="@+id/passwordline"
        android:layout_width="327dp"
        android:layout_height="3dp"
        android:layout_below="@+id/PasswordLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="327dp"
        android:layout_height="4dp"
        android:layout_below="@+id/confirmLayout"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:src="@drawable/third" />

    <Button
        android:id="@+id/tv_Next_step"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:background="#F7F8FC"
        android:enabled="false"
        android:hint="@string/next"
        android:textColor="#7C7B8A"
        android:textColorHint="#7C7B8A" />

    <TextView
        android:id="@+id/Terms_and_condition_text"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Next_step"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/terms_and_services"
        android:textColor="#31333B"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/confirmLayout"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_below="@+id/passwordline"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:background="#F7F8FC"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:background="#F7F8FC"
            android:fontFamily="sans-serif"
            android:hint="@string/confirm"
            android:inputType="textPassword"
            android:textColorHint="#7C7B8A" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/confirmline"
        android:layout_width="327dp"
        android:layout_height="3dp"
        android:layout_below="@+id/confirmLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/error1"
        android:layout_width="327dp"
        android:layout_height="25dp"
        android:layout_below="@+id/confirmline"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:textColor="#D44333"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="130dp"
