<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activity.CreateAccount">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="39.93dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <!-- Sign In -->


    <TextView
        android:id="@+id/sign_in"
        android:layout_width="65dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"

        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/signIn"
        android:textAppearance="@style/sign_in"
        android:translationY="-2.23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="168.3dp"
        android:layout_height="133.22dp"

        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/main" />

    <TextView
        android:id="@+id/hi_let_s_se"
        android:layout_width="159dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:gravity="top"
        android:lineSpacingExtra="4sp"
        android:text="@string/hifirst"
        android:textAppearance="@style/hi_let_s_se"
        android:textColor="#31333B"
        android:translationY="-2.23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/create_your"
        android:layout_width="328dp"
        android:layout_height="101dp"
        android:layout_below="@+id/hi_let_s_se"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="8sp"
        android:text="@string/createAccount"
        android:textAppearance="@style/create_your"
        android:textColor="#31333B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hi_let_s_se" />

    <EditText
        android:id="@+id/tv_first_name"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:width="1dp"
        android:background="#F7F8FC"
        android:hint="@string/fname"
        android:paddingStart="24sp"
        android:paddingLeft="24sp"
        android:textColorHint="#7C7B8A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_your" />

    <EditText
        android:id="@+id/tv_last_name"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:width="1dp"
        android:background="#F7F8FC"
        android:hint="@string/lname"
        android:paddingStart="24sp"
        android:paddingLeft="24sp"
        android:textColorHint="#7C7B8A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_name" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="327dp"
        android:layout_height="4dp"

        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_last_name"
        app:srcCompat="@drawable/first" />

    <Button
        android:id="@+id/tv_Next_step"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:background="#F7F8FC"
        android:enabled="false"
        android:hint="@string/next"
        android:textColor="#7C7B8A"
        android:textColorHint="#7C7B8A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/Terms_and_condition_text"
        android:layout_width="327dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/terms_and_services"
        android:textColor="#31333B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Next_step" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="130dp"
        android:layout_height="4dp"
        android:layout_marginTop="94dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Next_step" />


</androidx.constraintlayout.widget.ConstraintLayout>