<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activity.CreateAccount">

    <!-- Sign In -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="39.93dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="46dp"
        app:srcCompat="@drawable/main" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="55dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="18dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/signIn"
        android:textAppearance="@style/sign_in"
        android:translationY="-2.23sp" />

    <TextView
        android:id="@+id/hi_let_s_se"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="161dp"
        android:gravity="top"
        android:lineSpacingExtra="4sp"
        android:text="Hi! Letâ€™s set you up."
        android:textAppearance="@style/hi_let_s_se"
        android:textColor="#31333B"
        android:textSize="12sp"
        android:translationY="-2.23sp" />

    <TextView
        android:id="@+id/create_your"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hi_let_s_se"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="-2dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="3sp"
        android:text="Create your \naccount today:"
        android:textAppearance="@style/create_your"
        android:textColor="#31333B"
        android:textSize="20sp" />

    <EditText
        android:paddingStart="20sp"
        android:id="@+id/tv_first_name"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_below="@+id/create_your"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:width="1dp"
        android:background="#F7F8FC"
        android:hint="FIRST NAME"
        android:textColorHint="#7C7B8A"
        android:paddingLeft="10sp" />

    <EditText
        android:id="@+id/tv_last_name"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_below="@+id/tv_first_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:width="1dp"
        android:background="#F7F8FC"
        android:hint="LAST NAME"
        android:paddingStart="20sp"
        android:paddingLeft="20sp"
        android:textColorHint="#7C7B8A" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="290dp"
        android:layout_height="4dp"
        android:layout_below="@+id/tv_last_name"
        android:layout_marginLeft="16dp"

        android:layout_marginTop="54dp"
        app:srcCompat="@drawable/first" />

    <Button
        android:id="@+id/tv_Next_step"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:background="#F7F8FC"
        android:enabled="false"
        android:hint="NEXT STEP"
        android:textColor="#7C7B8A"
        android:textColorHint="#7C7B8A" />

    <TextView
        android:id="@+id/Terms_and_condition_text"
        android:layout_width="290dp"
        android:layout_height="26dp"
        android:layout_below="@+id/tv_Next_step"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/terms_and_services"
        android:textColor="#31333B"
        android:textSize="10sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="130dp"
        android:layout_height="4dp"
        android:layout_alignBottom="@+id/Terms_and_condition_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="-28dp"
        android:src="@drawable/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Next_step" />


</RelativeLayout>