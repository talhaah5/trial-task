<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activity.CreateAccount">

    <!-- Sign In -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="39.93dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="149dp"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="51dp"
        app:srcCompat="@drawable/main" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="55dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="13dp"
        android:lineSpacingExtra="4sp"
        android:text="sign In"
        android:textAppearance="@style/sign_in"
        android:translationY="-2.23sp" />

    <TextView
        android:id="@+id/hi_let_s_se"
        android:layout_width="159dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="174dp"
        android:gravity="top"
        android:lineSpacingExtra="4sp"
        android:text="Hi! Letâ€™s set you up."
        android:textAppearance="@style/hi_let_s_se"
        android:textColor="#31333B"
        android:translationY="-2.23sp" />

    <TextView
        android:id="@+id/create_your"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hi_let_s_se"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="11sp"
        android:text="Create your \naccount today:"
        android:textAppearance="@style/create_your"
        android:textColor="#31333B"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/tv_first_name"
        android:layout_width="289dp"
        android:layout_height="38dp"
        android:paddingStart="20sp"
        android:layout_below="@+id/create_your"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:width="1dp"
        android:background="#F7F8FC"
        android:hint="FIRST NAME"
        android:textColorHint="#7C7B8A"
        android:paddingLeft="20sp" />

    <EditText
        android:id="@+id/tv_last_name"
        android:layout_width="289dp"
        android:layout_height="38dp"
        android:layout_below="@+id/tv_first_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        android:width="1dp"
        android:background="#F7F8FC"
        android:hint="LAST NAME"
        android:paddingStart="20sp"
        android:paddingLeft="20sp"
        android:textColorHint="#7C7B8A" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="289dp"
        android:layout_height="4dp"
        android:layout_below="@+id/tv_last_name"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/first" />

    <Button
        android:id="@+id/tv_Next_step"
        android:layout_width="289dp"
        android:layout_height="39dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:background="#F7F8FC"
        android:enabled="false"
        android:hint="NEXT STEP"
        android:textColor="#7C7B8A"
        android:textColorHint="#7C7B8A" />

    <TextView
        android:id="@+id/Terms_and_condition_text"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Next_step"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="6dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/terms_and_services"
        android:textColor="#31333B"
        android:textSize="10sp" />


</RelativeLayout>